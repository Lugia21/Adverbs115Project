<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a4ita.adeva.adverbproject">

    <application
        android:allowBackup="true"
        android:label="ADV."
        android:icon="@drawable/adv"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Learn Adverbs"/>
        <activity
            android:name=".TestActivity"
            android:label="Test Your Knowledge"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".AddAdverbsActivity"
            android:label="Add Adverbs Page"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".DataListingActivity"
            android:label="Adverbs List"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EditDataActivity"
            android:label="Edit or View Adverbs"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>